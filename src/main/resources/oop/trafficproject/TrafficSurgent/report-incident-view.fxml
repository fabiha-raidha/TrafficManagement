<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.trafficproject.TrafficSurgent.ReportIncidentController"
            style="-fx-background-color: linear-gradient(to bottom right,#fff3e0,#ffe0b2);">

    <top>
        <ToolBar style="-fx-background-color: linear-gradient(to right,#ef6c00,#f57c00); -fx-padding:10;">
            <Label text="Report Incident"
                   style="-fx-text-fill:white; -fx-font-size:20px; -fx-font-weight:bold;"/>
        </ToolBar>
    </top>

    <center>
        <StackPane style="-fx-padding: 20;">
            <VBox spacing="16" maxWidth="720"
                  style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.16), 20, 0, 0, 6);">
                <Label text="Incident Details" style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#bf360c;"/>
                <GridPane hgap="16" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="35"/>
                        <ColumnConstraints percentWidth="65"/>
                    </columnConstraints>

                    <Label text="Location:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="locationCombo" promptText="Select Location" prefWidth="420"
                              GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Incident Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="typeCombo" promptText="Accident / Obstruction / Police Activity"
                              GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Severity:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="severityCombo" promptText="Low / Medium / High"
                              GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Description:" GridPane.rowIndex="3" GridPane.columnIndex="0" alignment="TOP_LEFT"/>
                    <TextArea fx:id="descriptionArea" prefRowCount="5" wrapText="true" GridPane.rowIndex="3" GridPane.columnIndex="1"
                              promptText="Max 500 characters"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Cancel" fx:id="cancelBtn"
                            style="-fx-background-color:#eeeeee; -fx-text-fill:#333; -fx-background-radius:10; -fx-padding:6 14;"/>
                    <Button text="Submit" fx:id="submitBtn"
                            style="-fx-background-color:#ef6c00; -fx-text-fill:white; -fx-background-radius:10; -fx-padding:8 18;"/>
                </HBox>
                <Label fx:id="statusText" textFill="#6d4c41"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
