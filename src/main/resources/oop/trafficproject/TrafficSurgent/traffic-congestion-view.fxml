<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.trafficproject.TrafficSurgent.TrafficCongestionController"
            prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right,#eef5ff,#dae8ff);">
    <top>
        <ToolBar style="-fx-background-color: linear-gradient(to right,#0d47a1,#1976d2); -fx-padding: 8;">
            <Label text="Traffic Map — Real-time Congestion"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <ProgressIndicator fx:id="loadingIndicator" prefWidth="24" prefHeight="24" visible="false"/>
        </ToolBar>
    </top>

    <center>
        <StackPane style="-fx-padding: 16;">
            <BorderPane maxWidth="1200"
                        style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 6);">
                <top>
                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 12;">
                        <Label text="Zone:" style="-fx-text-fill:#0d47a1; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="zoneFilter" promptText="All Zones" prefWidth="220"/>
                        <Button text="Refresh" fx:id="refreshBtn"
                                style="-fx-background-color:#1976d2; -fx-text-fill:white; -fx-background-radius:10; -fx-padding:6 14;"/>
                        <Label textFill="#607d8b" text="Colors:  • Green &lt;30%  • Yellow 30–70%  • Red &gt;70%"/>
                    </HBox>
                </top>

                <center>
                    <StackPane fx:id="mapContainer" style="-fx-background-color:#f5f8ff; -fx-background-radius: 0 0 16 16;">
                        <Label text="Map Loading…" style="-fx-text-fill:#607d8b; -fx-font-size:14px;"/>
                    </StackPane>
                </center>

                <right>
                    <VBox spacing="8" style="-fx-padding: 12;">
                        <Label text="Details" style="-fx-font-weight:bold; -fx-text-fill:#0d47a1;"/>
                        <TextArea fx:id="zoneInfo" editable="false" prefWidth="260" prefRowCount="10"
                                  style="-fx-background-color:#f7fbff; -fx-background-radius:8;"/>
                    </VBox>
                </right>
            </BorderPane>
        </StackPane>
    </center>
</BorderPane>
