<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.trafficproject.TrafficSurgent.tsDashboardController"
            prefWidth="1000" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right,#f0f4f7,#dce6f2);">

    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="8" style="-fx-padding:12; -fx-background-color: linear-gradient(to right,#0d47a1,#1976d2);">
            <Button text="Assign Field Unit" fx:id="btnAssignFieldUnit" style="-fx-background-color:#1976d2; -fx-text-fill:white;"/>
            <Button text="Export Data" fx:id="btnExportData" style="-fx-background-color:#1976d2; -fx-text-fill:white;"/>
            <Button text="Generate Report" fx:id="btnGenerateReport" style="-fx-background-color:#1976d2; -fx-text-fill:white;"/>
            <Button text="Patrol Schedule" fx:id="btnPatrolSchedule" style="-fx-background-color:#1976d2; -fx-text-fill:white;"/>
            <Button text="Report Incident" fx:id="btnReportIncident" style="-fx-background-color:#1976d2; -fx-text-fill:white;"/>
            <Button text="Response Emergency" fx:id="btnResponseEmergency" style="-fx-background-color:#1976d2; -fx-text-fill:white;"/>
            <Button text="Road Closures" fx:id="btnRoadClosures" style="-fx-background-color:#1976d2; -fx-text-fill:white;"/>
            <Button text="Traffic Congestion" fx:id="btnTrafficCongestion" style="-fx-background-color:#1976d2; -fx-text-fill:white;"/>
        </HBox>
    </top>

    <!-- Center Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding:16; -fx-background-color:white; -fx-background-radius:12; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.15),16,0,0,6);">
            <Label text="Select a module from the top menu" style="-fx-text-fill:#607d8b; -fx-font-size:16px;"/>
        </StackPane>
    </center>
</BorderPane>
